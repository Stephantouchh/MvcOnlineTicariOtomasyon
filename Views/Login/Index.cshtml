<!-- body starts -->
<body>

    <!-- section -->
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">TİCARİ OTOMASYON'UMUZA HOŞ GELDİNİZ &nbsp;</a>
            </div>
            <div class="social">
                <li><a href="https://github.com/Stephantouchh"><span class="fa fa-github"></span></a></li>
                <li><a href="https://www.facebook.com/ni.hat.547"><span class="fa fa-facebook"></span></a></li>
                <li><a href="https://twitter.com/oval_nihat"><span class="fa fa-twitter"></span></a></li>
                <li><a href="https://www.linkedin.com/in/nihat-oval%C4%B1o%C4%9Flu-a74010205/"><span class="fa fa-linkedin"></span></a></li>
                <li><a href="https://gmail.com/"><span class="fa fa-google-plus"></span></a></li>
                <li><a href="https://www.youtube.com/channel/UCBX88Hc_7z_AXxHmiDeIY3A"><span class="fa fa-youtube"></span></a></li>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <h1>Asp.Net Mvc5 İle</h1>
                    <h2>Dinamik Web Projesi Geliştirme</h2>
                    <p>
                        Admin, Personel kişisel sayfası ve cari kişisel sayfası olmak üzere 3 tane temel yapımız bulunmaktadır. Giriş yapmak istediğiniz yetki durumunuza göre sağ taraftan ilgili menüyü seçin.
                    </p>
                    <div class="content3">
                        <ul>
                            <li><a class="" href="#">Firmalar</a></li>
                            <li><a class="read" href="#">Ürünlerimiz</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2">kayıt ol »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">CARİ GİRİŞİ »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">personel GİRİŞİ »</a>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
    </section>
    <!-- //section -->
    <!-- login form popup-->
    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">
            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Cari Giriş Formu</h3>
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("CariLogin1", "Login", FormMethod.Post))
                        {
                            <input type="text" class="name" name="CariMail" Placeholder="Mail Adresiniz..." required="" />
                            <input type="password" class="password" name="CariSifre" Placeholder="Şifreniz..." required="" />
                            <input type="submit" value="Giriş Yap">
                        }
                    </div>
                    <div class="login-agileits-bottom">
                        <h6><a href="#">Şifremi Unuttum?</a></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //login form popup-->
    <!-- subscribe form popup-->
    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">
            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Personel Giriş Formu</h3>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                        {
                            <input type="text" class="name" name="KullaniciAd" Placeholder="Kullanıcı Adınız..." required="" />
                            <input type="password" class="password" name="Sifre" Placeholder="Şifreniz..." required="" />
                            <input type="submit" value="Giriş Yap">
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">
            @Html.Action("Partial1", "Login")
        </div>
    </div>
    <script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
    <script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>
    <!--//popup-js-->

</body>
<!-- //body ends -->
</html>